{
  "compilerOptions": {
    "target": "es2022",
    "baseUrl": "./",
    "paths": {
      "@src/*": [
        "src/*"
      ]
    },
    "module": "esnext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "strict": true,
    "sourceMap": true,
    "allowJs": true,
  },
  "include": [
    "src/**/*"
  ]
}